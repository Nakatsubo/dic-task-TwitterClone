section.sec
  .inner
    .tit
      h2
        span 投稿を編集する
    .content
      = form_with model: @mutter, local: true do |form|
        - if @mutter.errors.any?
          .error_content
            ul
              - @mutter.errors.full_messages.each do |message|
                li = message
        .create_content
          = form.text_area :content, placeholder: "いまどうしてる？"
          = form.submit "編集する", class: "submit"