section.sec
  .inner
    .tit
      h2 新規投稿
    .content
      = form_with model: @mutter, url: confirm_mutters_path, local: true do |form|
        - if @mutter.errors.any?
          .error_content
            ul
              - @mutter.errors.full_messages.each do |message|
                li = message
        .create_content
          = form.text_area :content, placeholder: "いまどうしてる？", class: "text_area"
          = form.submit "確認", class: "submit"
